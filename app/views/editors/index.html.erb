<% @page_feature = "Non-Search" %>
<div class="container">
<div class="row">
  <div class="col-md-12">
<h1>User List</h1>
</div>
</div>
<div class="row">
<div class="col-lg-9 col-md-8 col-sm-12" id="main">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr class="success">
                  <th>ID</th>
                  <th>Email</th>
                  <th>Sign in Count</th>
                  <th>Created At</th>
                  <th>Last Sign In</th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.sign_in_count %></td>
                    <td><%= user.created_at.strftime("%B %-d, %Y") %></td>
                    <td><%= user.last_sign_in_at.strftime("%H:%M %B %-d, %Y") %></td>

                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

    <br>

<%= link_to "Back", root_path, class: 'btn btn-primary' %>
</div>
</div>
<br>
</div>